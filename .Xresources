URxvt*termName: rxvt-unicode

! I dont like bold
URxvt*font:      xft:Monospace:pixelsize=12
URxvt*boldFont:  xft:Monospace:pixelsize=12

! I dont like scroll bars neither
URxvt*scrollBar: false

! To reverse the basic conf of white background and black font
!URxvt*reverseVideo: True

! Disable the insanely annoying Ctrl+Shift shortcut that enters ISO14755 mode
URxvt.iso14755:         False

URxvt*selectToClipboard: true

! Colors
URxvt*foreground: #d0d0d0
URxvt*background: #101010
URxvt*color0: #101010
