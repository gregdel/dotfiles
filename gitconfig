[user]
    name = Gr√©goire Delattre
    email = gregoire.delattre@gmail.com
[branch]
    autosetupmerge = true
    autosetuprebase = always
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    dc = diff --cached
    l  = log --graph --date-order --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit
    la = !git l --all
    ls = ls-files
    pullall = !git pull && git submodule update --init --recursive
    cia = commit --amend --reset-author
    current-branch = rev-parse --abbrev-ref HEAD
    pushbr = !git push --set-upstream origin `git current-branch`
    dm = !git branch --merged | grep -v '*' | xargs -n 1 git branch -d
    pushdev = !git push --set-upstream origin `git current-branch`:dev/`git current-branch`
    subup = submodule update --init
[push]
    default = tracking
[core]
    editor = vim
