# vim: ft=sh :

fpass() {
	path_dir=$HOME/.password-store
	password=$(find "$path_dir" -type f -name '*.gpg' \
		| sed "s/.gpg//" \
		| sed "s;$path_dir/;;" \
		| fzf --reverse --tac)
	[ "$password" ] || return 0
	pass -c "$password"
}

j() {
  [ $# -gt 0 ] && _z "$*" && return
  cd "$(_z -l 2>&1 | fzf --height 40% --nth 2.. --reverse --inline-info +s --tac --query "${*##-* }" | sed 's/^[0-9,.]* *//')"
}
