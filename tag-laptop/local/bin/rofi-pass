#!/bin/sh

PASSDIR="$HOME/.password-store/"

_clipboard() {
	if [ "$WAYLAND_DISPLAY" ]; then
		wl-copy --paste-once --trim-newline
	else
		xclip -i
	fi
}

_rofi() {
	if [ "$WAYLAND_DISPLAY" ]; then
		wofi --dmenu "$@"
	else
		rofi -dmenu "$@"
	fi
}

list_pass() {
	find "$PASSDIR" -type f -name '*.gpg' \
		| sed 's/.gpg//' \
		| cut -c "$(( ${#PASSDIR} + 1 ))-" \
		| sort
}

selected=$(list_pass | _rofi -p "ï‘– ")
[ "$selected" ] || exit 0

pass "$selected" | head -n 1 | _clipboard
