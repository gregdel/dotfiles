#!/bin/sh
GOFI_MODE=${GOFI_MODE:-sway}

_run() {
	selection=$(_fzf </dev/stdin)
	[ "$selection" ] || return 1

	case "$GOFI_MODE" in
		sway)     swaymsg exec "$* $selection"   ;;
		exec)     exec "$@" "$selection"         ;;
		exec-raw)
		          # shellcheck disable=SC2086
		          exec "$@" $selection           ;;
		echo)     echo "$selection"              ;;
	esac
}

_fzf() {
	fzf \
		--reverse \
		--color fg:252,bg:233,hl:67,fg+:252,bg+:235,hl+:81 \
		--color info:144,prompt:161,spinner:135,pointer:135,marker:118
}

_pass() {
	export GOFI_MODE=echo
	path_dir=$HOME/.password-store
	selected=$(find "$path_dir" \
		-type f \
		-name '*.gpg' \
		| sed "s/.gpg//" \
		| sed "s;$path_dir/;;" \
		| _run
	)
	[ "$selected" ] || return
	pass "$selected" \
		| head -n 1 \
		| wl-copy --trim-newline --paste-once --foreground
}

_urls() {
	export GOFI_MODE=echo
	selection="$(_run < "$HOME/.urls")"
	url=${selection##* }
	[ "$url" ] && o "$url"
}

_man() {
	export GOFI_MODE=exec-raw
	man -k . \
		| sed 's/^\([^ ]*\) (\(.\)).*/\2 \1/' \
		| grep -E '^[0-9]+' \
		| sort -n \
		| _run man
}

_binaries() {
	# shellcheck disable=SC2046
	find \
		$(echo "$PATH" | sed 's/:/ /g') \
		-printf "%f\n" \
		-type f \
		-type l \
		| sort -u \
		| _run
}

_edit() {
	shift
	"$EDITOR" "$@"
}

_window() {
	shift
	mode=$1
	shift
	alacritty \
		--title "gofi" \
		--command gofi "$mode" "$*"
}

_usage() {
	echo "gofi [window] binaries - launch a program"
	echo "gofi [window] man      - search through man pages"
	echo "gofi [window] pass     - search and copy pass from password store"
	echo "gofi [window] edit     - edit a file"
	echo "gofi [window] url      - search and open URLs stored in $HOME/.urls"
	exit 1
}

case "$1" in
	binaries) _binaries     ;;
	man)      _man          ;;
	pass)     _pass         ;;
	urls)     _urls         ;;
	edit)     _edit "$@"    ;;
	window)   _window "$@"  ;;
	*)        _usage        ;;
esac
