# vim: ft=sh :

version=0.65.1
base_url="https://github.com/junegunn/fzf/releases/download"
url="$base_url//v$version/fzf-$version-linux_amd64.tar.gz"
cache_dir="$GPKG_BUILD_DIR/$GPKG_PKG_NAME"

_gpkg_version() {
	echo "$version"
}

_gpkg_install() {
	mkdir -p "$cache_dir"
	cd "$cache_dir" || _gpkg_log_error "Failed to enter $cache_dir"
	_gpkg_fetch "$url" | tar -xz
	ln -fs "$cache_dir/fzf" "$HOME/.local/bin"
}

_gpkg_uninstall() {
	rm -f "$HOME/.local/bin/fzf"
	rm -rf "$cache_dir"
}
